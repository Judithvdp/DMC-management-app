@model DMCProject1.Helpers.ComparisonIndexViewmodel

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>This is the place for comparisons!</p>
<p>Select a Pattern from the dropdown list and click "Compare". </p>
<p>In the next window it will show you all the colors you already have, the alternative colors you can use for your pattern and the colors you should buy to be able to complete your pattern.</p>

<table class="table">

</table>
    @using (Html.BeginForm("Comparison", "Comparison", FormMethod.Post, new { id = "Comparison", name = "Comparison" }))
    {
        @Html.AntiForgeryToken()

        @Html.DropDownListFor(m => m.PatternId, new SelectList(Model.Patterns, "PatternId", "Name"), "Select Pattern",
            new {onchange = "SelectedIndexChanged()"})
    }


 <script>
     function SelectedIndexChanged() {
         //Form post  
         document.Comparison.submit();
     }

 </script>   