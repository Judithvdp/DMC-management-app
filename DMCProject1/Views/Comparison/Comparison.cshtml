        <th width="100">
            @Html.DisplayName("DmcID")
        </th>
        <th width="200">
            @Html.DisplayName("Color Name")
        </th>
        <th width="100">
            @Html.DisplayName("Color")
        </th>
    </tr>
    <tr>
        @foreach (var item in Model.NotOwned)
        {
         <tr>
            <td width="100">
                @Html.DisplayFor(modelItem => item.DmcId)
            </td>
            <td width="200">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="background-color:@item.HexaDecimal" width="100">
                @Html.DisplayFor(modelItem => item.HexaDecimal)
            </td>
         </tr>
        }
    </tr>
</table>