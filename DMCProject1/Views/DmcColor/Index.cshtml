@model IEnumerable<DMCProject1.Models.DmcColor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.DmcId)
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayName("Color")
            </td>
            <td>

            </td>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DmcId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @*Still need to make a colorsquare here*@
        @Html.DisplayFor(modelItem => item.Blue)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.DmcId })
